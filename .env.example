PORT=5000
NODE_ENV=development

# Database (repo defaults to port 3307)
DB_HOST=localhost
DB_PORT=3307
DB_USER=root
DB_PASSWORD=your_db_password
DB_NAME=debt_manager

# JWT
JWT_SECRET=replace_this_with_a_strong_secret
JWT_EXPIRES_IN=24h

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=your_smtp_password
SMTP_FROM="Debt Collection System <noreply@debtmanager.co.ke>"

# Twilio / Phone service (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+254100000000
WEBHOOK_URL=https://your-ngrok-url.ngrok.io/webhook
PHONE_SERVICE_ENABLED=true
PHONE_MOCK_MODE=true
PHONE_DEFAULT_VOICE=alice
PHONE_DEFAULT_LANGUAGE=en-US
PHONE_MAX_DURATION=300
PHONE_RETRY_ATTEMPTS=3

# Logging and misc
LOG_LEVEL=info
LOG_FILE=./logs/app.log
CORS_ORIGIN=*
